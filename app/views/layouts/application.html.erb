<!DOCTYPE html>
<html>
<head>
  <title>Mesh</title>
  <%= stylesheet_link_tag    "application" %>
  <%= stylesheet_link_tag    "hover"       %>
  <%= stylesheet_link_tag    "https://yui.yahooapis.com/pure/0.5.0/pure-min.css" %>
  <%= stylesheet_link_tag    "https://yui.yahooapis.com/pure/0.5.0/grids-responsive-min.css" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js" %> 
  <%= javascript_include_tag "linkify" %>
  <%= csrf_meta_tags %>
  <script src="https://connect.soundcloud.com/sdk.js"></script>
</head>

<body class="<%= params[:controller] %>">
<div id="background">
    <%=image_tag("space.jpg")%>
  </div>
  <div class="pure-u-1" id="header">
      <div class="pure-u-1-6" id="logo">
        <% if current_user %>
          <%= link_to "Mesh", "/authentications" %>
        <% else %>
          <%= link_to "Mesh", "/login" %>
        <% end %>
      </div>
      <div class="pure-u-5-6" id="userarea">
        <% if current_user %>
          <%= link_to "Log out", '/logout', :id => "logout" %>
        <% end %>
      </div>
    </div>

    <div class="pure-u-1-6" id="sidebar">

      <div class="pure-u-1-6" id="twitterTab">
        <p><%= link_to "Twitter", '/twitter' %></p>
      </div>

      <div class="pure-u-1-6" id="instagramTab">
        <p><%= link_to "Instagram", '/instagram' %></p>
      </div>
 
      <div class="pure-u-1-6" id="soundcloudTab">
        <p><%= link_to "Soundcloud", '/soundcloud' %></p>
      </div>

      <div class="pure-u-1-6" id="redditTab">
        <p><%= link_to "Reddit", '/reddit' %></p>
      </div>

      <div class="pure-u-1-6" id="facebookTab">
        <p><%= link_to "Facebook", '/facebook' %></p>
      </div>
 
      <div class="pure-u-1-6" id="linkedinTab">
        <p><%= link_to "LinkedIn", '/linkedin' %></p>
      </div>

      <div class="pure-u-1-6" id="pinterestTab">
        <p><%= link_to "Pinterest", '/pinterest' %></p>
      </div>

      <div class="pure-u-1-6" id="deviantartTab">
        <p><%= link_to "deviantART", '/deviantart' %></p>
      </div>

      <div class="pure-u-1-6" id="youtubeTab">
        <p><%= link_to "YouTube", '/youtube' %></p>
      </div>

      <div class="pure-u-1-6" id="tumblrTab">
        <p><%= link_to "tumblr", '/tumblr' %></p>
      </div>

      <div class="pure-u-1-6" id="addTab">
        <p><%= link_to "+", '/authentications' %></p>
      </div>

    </div>
  <div class="pure-u-5-6"id="content">
    <%= yield %>
  </div>
</body>
</html>
