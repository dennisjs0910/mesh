<!DOCTYPE html>
<html>
<head>
  <title>Mesh</title>
  <%= stylesheet_link_tag    "application" %>
  <%= stylesheet_link_tag    "hover"       %>
  <%= stylesheet_link_tag    "http://yui.yahooapis.com/pure/0.5.0/pure-min.css" %>
  <%= stylesheet_link_tag    "http://yui.yahooapis.com/pure/0.5.0/grids-responsive-min.css" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js" %> 
  <%= javascript_include_tag "linkify" %>
  <%= csrf_meta_tags %>
</head>

<body class="<%= params[:controller] %>">
<div id="background">
    <%=image_tag("space.jpg")%>
  </div>
  <div class="pure-u-1" id="header">
      <div class="pure-u-1-6" id="logo">
        <% if current_user %>
          <%= link_to "Mesh", "/authentications" %>
        <% else %>
          <%= link_to "Mesh", "/login" %>
        <% end %>
      </div>
      <div class="pure-u-5-6" id="userarea">
        <%=image_tag("user.svg", :id=>"usericon")%>
      </div>
    </div>

    <div class="pure-u-1-6" id="sidebar">
      <div class="pure-u-1-6" id="facebookTab">
        <p><%= link_to "Facebook", '/facebook' %></p>
      </div>

      <div class="pure-u-1-6" id="twitterTab">
        <p><%= link_to "Twitter", '/twitter' %></p>
      </div>

      <div class="pure-u-1-6" id="instagramTab">
        <p><%= link_to "Instagram", '/instagram' %></p>
      </div>

      <div class="pure-u-1-6" id="linkedinTab"><p>LinkedIn</p></div>
      <div class="pure-u-1-6" id="pinterestTab"><p>Pinterest</p></div>
      <div class="pure-u-1-6" id="deviantartTab"><p>deviantART</p></div>
      <div class="pure-u-1-6" id="youtubeTab"><p>YouTube</p></div>
      <div class="pure-u-1-6" id="soundcloudTab"><p>SoundCloud</p></div>
      <div class="pure-u-1-6" id="tumblrTab"><p>Tumblr</p></div>
      <div class="pure-u-1-6" id="redditTab"><p>Reddit</p></div>
      <div class="pure-u-1-6" id="addTab"><p>+</p></div>
    </div>
  <div class="pure-u-5-6"id="content">
    <%= yield %>
  </div>
</body>
</html>
