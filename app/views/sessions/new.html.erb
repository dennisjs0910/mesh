<h1>Log in</h1>

  <%= form_tag sessions_path do %>
    <div class="field">
      <p><%= label_tag :email %>
      <%= text_field_tag :email, params[:email] %></p>
    </div>
    <div class="field">
      <p><%= label_tag :password %>
      <%= password_field_tag :password %></p>
    </div>
    <div class="field">
      <p><%= check_box_tag :remember_me, 1, params[:remember_me] %>
      <%= label_tag :remember_me %></p>
    </div>
    <div class="actions"><%= submit_tag "Log in" %></div>
  <% end %>
    <p>Don't have an account with us? <%= link_to "Register", new_user_path %></p>